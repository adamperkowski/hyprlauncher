{
  "window": {
    "width": 600,
    "height": 600,
    "anchor": "center",
    "margin_top": 0,
    "margin_bottom": 0,
    "margin_left": 0,
    "margin_right": 0,
    "show_descriptions": false,
    "show_paths": true,
    "show_icons": true,
    "show_search": true,
    "vim_keys": true,
    "show_border": true,
    "border_width": 1,
    "border_color": "#89b4fa",
    "use_gtk_colors": false
  },
  "debug": {
    "disable_auto_focus": false,
    "enable_logging": false
  },
  "theme": {
    "colors": {
      "item_bg": "#1e1e2e",
      "item_bg_hover": "#181825",
      "item_bg_selected": "#181825",
      "item_description": "#a6adc8",
      "item_name": "#cdd6f4",
      "item_path": "#6c7086",
      "search_bg": "#181825",
      "search_bg_focused": "#181825",
      "search_caret": "#89b4fa",
      "search_text": "#cdd6f4",
      "window_bg": "#1e1e2e"
    },
    "corners": {
      "list_item": 8,
      "search": 8,
      "window": 12
    },
    "spacing": {
      "item_margin": 6,
      "item_padding": 4,
      "search_margin": 12,
      "search_padding": 12
    },
    "typography": {
      "item_description_size": 12,
      "item_name_size": 14,
      "item_path_font_family": "monospace",
      "item_path_size": 12,
      "search_font_size": 16
    }
  }
}
